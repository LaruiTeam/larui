mixin leftMenu
	- var menus = [{menuName:"lar-gallery组件",link:"/src/demo/pages//unit/lar-gallery/gallery.html"},{menuName:"lar-backtop组件",link:"/src/demo/pages/unit/lar-backTop/backTop.html"},{menuName:"lar-thumbGallery组件",link:"/src/demo/pages/unit/lar-thumbGallery/thumbGallery.html"}]
	div
		ul
			li.title
				span 组件列表
			each item in menus
				li
					- var menuName=item.menuName
					a(href=item.link) #{menuName}
