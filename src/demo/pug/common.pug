//- 浏览器头文件属性设置
mixin commonMeta
	meta(charset="utf-8")
	meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
	meta(name="description", content="larui,互联网类larui组件库")
	meta(name="Keywords", content="larui,互联网类larui组件库")
	meta(name="viewport" ,content="maximum-scale=1.0 , minimum-scale=1.0 , user-scalable=0 , width=device-width , initial-scale=1.0" )


//- 公共头部链接
mixin commonLink(baseUrl)
	link(rel="icon", href=baseUrl + "images/favicon.ico", type="image/x-icon")
	link(rel="stylesheet", href=baseUrl + "common/common.css")

//-所有插件和公共js
mixin commonScript(baseUrl)
	script(src=baseUrl+"/src/dist/index.js")
	script(src=baseUrl + "common/common.js")

mixin anthenScript(baseUrl)
	script(src=baseUrl + "lib/jquery.cookie.js")
	script(src=baseUrl + "lib/jquery.base64.js")

