doctype html
html(lang='en')

  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description', content='')
    meta(name='author', content='')

    title SB Admin - Start Bootstrap Template

    include includes/css/core.pug

    include includes/css/custom.pug

    include includes/mixin.pug

    link(href='css/larGalleryWall/larGalleryWall.css', rel='stylesheet')
  body#page-top.fixed-nav.sticky-footer.bg-dark
    include includes/navbar.pug
    .content-wrapper
      .container-fluid
        // 面包屑
        ol.breadcrumb
          li.breadcrumb-item
            a(href='#') Lar-ui
          li.breadcrumb-item.active 照片墙组件
        // 撑起页面高度
        div(style='height: 1000px')
          // #组件名称
          h3
            a.headerlink(href="#全局配置")|照片墙组件
          // #组件概述
          p
            code LarGalleryWall
            |照片墙组件用于页面长度超过屏幕浏览器高度的情况。一旦超出浏览器高度，将自动出现。
          // #组件使用方法
          h3
            a.headerlink(href="#全局配置")|使用方法
          p
            code $(selector).larGalleryWall(option)
          // #组件展示效果
          h3
            a.headerlink(href="silent")|展示效果
          section.container
             div.galleryWallContainer
             div.lar-arrow
          // #组件属性介绍
          h3
            a.headerlink(href="silent")|属性介绍
          -
            var objs = [{ title : 'dataUrl' , type : 'string' , default : 'data.json' , description : '照片墙数据请求URL,需后台返回JSON,格式参考data.json' },
                        { title : 'galleryType' , type : 'string' , default : 'tall' , description : 'gallery有两种展示,高的tall和方的square' },
                        { title : 'titleType' , type : 'string' , default : 'mask' , description : '设置标题的展示类型,分为两种,default和马赛克,其中default为默认展示方式,mask为遮罩展示方式' },
                        { title : 'pageSize' , type : 'string' , default : '8' , description : 'pageSize是传给后台的参数,默认为8' },
                        { title : 'pageNumber' , type : 'string' , default : 'tall' , description : 'pageNumber为传给后台分页的参数,默认为1' },
                        { title : 'showTitle' , type : 'boolean' , default : 'false' , description : '是否显示标题,默认不显示' },
                        { title : 'paramMap' , type : 'obj' , default : '' , description : '用于处理不同服务后台返回参数的不同,映射后台参数' },
                        { title : 'link' , type : 'string' , default : 'tall' , description : 'tall , square' }]
          each obj in objs
            +renderOption(obj)
      // /.container-fluid
      // /.content-wrapper

      include includes/footer.pug

      include includes/scroll-to-top.pug

      include includes/js/core.pug

      include includes/js/custom.pug
      script(src='larBackTop/larBackTop.js')
      script(src='larGalleryWall/larGalleryWall.js')
      script.
         $(document).ready(function(){
            $('.galleryWallContainer').galleryWall({
               dataUrl: 'larGalleryWall/data.json',
               galleryType : 'square',
               pageSize :'3',
               titleType : 'mask',
               paramMap : {
                  imgPath : 'imgPath',
                  title : 'titleName',
                  id : 'audioId',
                  author : 'audioAuthor'
               },
            });
         });
        $('.scroll-to-top').larBackTop();
      // Toggle between fixed and static navbar
      script.
        $('#toggleNavPosition').click(function() {
        $('body').toggleClass('fixed-nav');
        $('nav').toggleClass('fixed-top static-top');
        });

      // Toggle between dark and light navbar
      script.
        $('#toggleNavColor').click(function() {
        $('nav').toggleClass('navbar-dark navbar-light');
        $('nav').toggleClass('bg-dark bg-light');
        $('body').toggleClass('bg-dark bg-light');
        });
