doctype html
html(lang='en')

  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description', content='')
    meta(name='author', content='')
    link(rel="stylesheet" href="larUpload/webuploader/css/webuploader.css")
    link(rel="stylesheet" href="larBooklet/booklet-master/src/jquery.booklet.latest.css" media="screen, projection, tv")
    link(rel="stylesheet" href="css/larBooklet/larBooklet.css")

    title SB Admin - Start Bootstrap Template

    include includes/css/core.pug

    include includes/css/custom.pug

  body#page-top.fixed-nav.sticky-footer.bg-dark.main
    include includes/navbar.pug
    .content-wrapper
      .container-fluid
        // Breadcrumbs
        ol.breadcrumb
          li.breadcrumb-item
            a(href='#') Lar-ui
          li.breadcrumb-item.active 书卷展示组件
        div.result
          h3
            a.headerLink |书卷展示组件
          p
            code larBooklet
            |暂时未知。
          h3
            a.headerLink |使用方法
            p
            div.code-html
              code $([selector]).larBooklet([options]);
            p
            div.code-html html
              - var divContainerH = '<div id="booklet"></div>';
              code.block #{divContainerH}
            p
            div.code-js js
              - var itemsContent = '\'<div><img src="larGalleryWall/1.jpg"></div>\'';
              code.block $('#booklet').larBooklet({
              code.block &nbsp;&nbsp;bookletWidth: 950,
              code.block &nbsp;&nbsp;bookletHeight: 450,
              code.block &nbsp;&nbsp;items: [
              code.block &nbsp;&nbsp;&nbsp;&nbsp;{extras:{$dom:$(#{itemsContent})}},
              code.block &nbsp;&nbsp;&nbsp;&nbsp;{extras:{$dom:$(#{itemsContent})}},
              code.block &nbsp;&nbsp;&nbsp;&nbsp;{extras:{$dom:$(#{itemsContent})}},
              code.block &nbsp;&nbsp;&nbsp;&nbsp;{extras:{$dom:$(#{itemsContent})}}
              code.block &nbsp;&nbsp;]
              code.block });
          h3
            a.headerLink |展示效果
          div
            div#booklet
          br
          p
          h3
            a.headerLink |属性说明
          -
           var properties = [{ title:'items',type:'array',default:'null',description:'展示在书卷的dom节点数组，items[i].extras.$dom'},
                             {title:'bookletWidth',type:'int/string',default:'500',description:'书卷展示的宽度。int类型是像素值，string类型是给带引号的百分比'},
                             {title:'bookletHeight：',type:'int/string',default:'400',description:'书卷展示的高度。int类型是像素值，string类型是给带引号的百分比'},
                             {title:'speed',type:'int',default:'400',description:'翻页的速度'},
                             {title:'showPageContent',type:'boolean',default:'false',description:'点击遮罩-显示详细信息(每个页面都是一张图片时使用该属性)'},
                             {title:'pageNumShow',type:'boolean',default:'false',description:'是否显示页数'},
                             {title:'pageBtnPosition',type:'string',default:'out',description:'书页面内按钮 值：\'in\'或\'out\''},
                             {title:'arrows',type:'string',default:'true',description:'默认箭头（首尾页 单侧箭头）默认\'true\''},
                             {title:'doubleArrows',type:'string',default:'false',description:'双箭头 左右两侧一直存在  默认 \'false\';暂未开发双箭头其他功能'},
                             {title:'manual',type:'boolean',default:'false',description:'卷页效果：卷页效果依赖jquery-ui 页面要引入才能使用'},
                             {title:'hoverWidth',type:'int',default:'50',description:'卷页宽度'},
                             {title:'bookletBtnIn',type:'int',default:'12',description:'内部按钮距书边的距离'},
                             {title:'bookletBtnOut',type:'int',default:'40',description:'外部按钮距书边的距离'},
                             {title:'pageContentPadding',type:'string',default:'15px 30px 15px',description:'页面内容padding'}];
          each property in properties
            div.description
              li.description-title #{property.title}
              div.description-type
                span 类型：
                span.value #{property.type}
              div.description-default
                span 默认值：
                span.value #{property.default}
              div.description-detail
                span 描述：
                span.value #{property.description}

      include includes/footer.pug

      include includes/scroll-to-top.pug

      include includes/js/core.pug

      include includes/js/custom.pug

      script(src='larBooklet/booklet-master/src/jquery-2.1.0.min.js')
      script(src='larBooklet/booklet-master/src/jquery-ui-1.10.4.min.js')
      script(src='larBooklet/booklet-master/src/jquery.easing.1.3.js')
      script(src='larBooklet/booklet-master/src/jquery.booklet.latest.min.js')
      script(src='larBooklet/larBooklet.js')
      script.
        $('#booklet').larBooklet({
          bookletWidth: 950,
          bookletHeight: 450,
          items: [{extras:{$dom:$('<div><img src="larGalleryWall/1.jpg"></div>')}},{extras:{$dom:$('<div><img src="larGalleryWall/1.jpg"></div>')}},{extras:{$dom:$('<div><img src="larGalleryWall/1.jpg"></div>')}},{extras:{$dom:$('<div><img src="larGalleryWall/1.jpg"></div>')}}]
        });

      // Toggle between fixed and static navbar
      script.
        $('#toggleNavPosition').click(function() {
        $('body').toggleClass('fixed-nav');
        $('nav').toggleClass('fixed-top static-top');
        });

      // Toggle between dark and light navbar
      script.
        $('#toggleNavColor').click(function() {
        $('nav').toggleClass('navbar-dark navbar-light');
        $('nav').toggleClass('bg-dark bg-light');
        $('body').toggleClass('bg-dark bg-light');
        });
